{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ftry/shared/types": ["../../libs/shared/types/src/index.ts"],
      "@ftry/shared/utils": ["../../libs/shared/utils/src/index.ts"],
      "@ftry/shared/constants": ["../../libs/shared/constants/src/index.ts"],
      "@ftry/shared/prisma": ["../../libs/shared/prisma/src/index.ts"],
      "@ftry/frontend/auth": ["../../libs/frontend/auth/src/index.ts"],
      "@ftry/auth/api": ["../../libs/auth/api/src/index.ts"],
      "@ftry/auth/data-access": ["../../libs/auth/data-access/src/index.ts"],
      "@ftry/auth/data-access-client": ["../../libs/auth/data-access-client/src/index.ts"],
      "@ftry/auth/feature-login": ["../../libs/auth/feature-login/src/index.ts"],
      "@ftry/auth/feature-user-management": [
        "../../libs/auth/feature-user-management/src/index.ts"
      ],
      "@ftry/auth/ui-components": ["../../libs/auth/ui-components/src/index.ts"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
